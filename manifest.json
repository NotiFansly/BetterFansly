{
    "manifest_version": 3,
    "name": "BetterFansly",
    "version": "1.6.5",
    "description": "Power-user client modification for Fansly with themes, utilities, and privacy tools",
    "icons": {
        "16": "icons/bf-logo.png",
        "32": "icons/bf-logo.png",
        "48": "icons/bf-logo.png",
        "128": "icons/bf-logo.png"
    },
    "permissions": [
        "storage",
        "userScripts",
        "activeTab"
    ],
    "host_permissions": [
        "https://fansly.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://fansly.com/*"
            ],
            "js": [
                "src/libs/hls.min.js",
                "src/plugins/miniplayer.js",
                "src/plugins/backupTool.js",
                "src/plugins/mutualIndicator.js",
                "src/plugins/spendingTracker.js",
                "src/plugins/keywordMuter.js",
                "src/plugins/ghostMode.js",
                "src/data/catppuccin.js",
                "src/core/ui.js",
                "src/core/injector.js"
            ],
            "css": [
                "src/styles/main.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/bf-logo.png",
                "src/injections/interceptor.js"
            ],
            "matches": [
                "https://fansly.com/*"
            ]
        }
    ]
}
